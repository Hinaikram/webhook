pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Clone the GIT') {
            steps {
                git branch: 'main', url: 'https://github.com/Hinaikram/webhook.git'
            }
        }
        
        stage('Update Index.html') {
            steps {
                script {
                    sh 'rm -rf /var/www/html/*'
                    sh 'cp -r . /var/www/html/'
                }
            }
        }

        
    }
}
